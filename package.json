{
  "name": "supersonic",
  "version": "2.0.0",
  "description": "live voice channels for remote teams",
  "main": "main.js",
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-log": "^4.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.5",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.53",
    "@electron-forge/maker-deb": "^6.0.0-beta.53",
    "@electron-forge/maker-rpm": "^6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.53",
    "@electron-forge/maker-zip": "^6.0.0-beta.53",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "electron-notarize": "^1.0.0",
    "node": "^14.12.0"
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -m",
    "publish": "electron-builder -m -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aidandewar/supersonicDistribution.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aidandewar/supersonicDistribution/issues"
  },
  "homepage": "https://github.com/aidandewar/supersonicDistribution#readme",
  "build": {
    "appId": "supersonic",
    "files": [
      "!**/node_modules/*"
    ],
    "afterSign": "notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "aidandewar",
        "repo": "supersonicDistribution"
      }
    ],
    "mac": {
      "category": "productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "icons/icon_256@1x.png.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "icons/icon_256@1x.png.png",
      "target": [
        "pacman"
      ]
    },
    "dmg": {
      "sign": false
    }
  }
}
